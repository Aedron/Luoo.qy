{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "moduleResolution": "node"
  },
  "include": [
    "app"
  ],
  "exclude": [
    "node_modules",
    "app/view/*"
  ]
}
